<view>
    <columns>
        <column name="reference" order="100">
            <widget type="text" fieldname="referencia" />
        </column>
        <column name="description" order="110">
            <widget type="text" fieldname="descripcion" />
        </column>
        <column name="quantity" display="right" order="120">
            <widget type="number" fieldname="cantidad" />
        </column>
        <column name="price" display="right" order="130">
            <widget type="money" fieldname="pvpunitario" />
        </column>
        <column name="percentage-discount" display="right" order="140">
            <widget type="number" fieldname="dtopor" />
        </column>
        <column name="dto-2" display="none" order="150">
            <widget type="number" fieldname="dtopor2" />
        </column>
        <column name="net" display="right" order="160">
            <widget type="money" fieldname="pvptotal" readonly="true" />
        </column>
        <column name="percentage-vat" display="right" order="170">
            <widget type="number" fieldname="iva" />
        </column>
        <column name="price-with-tax" display="right" order="180">
            <widget type="money" fieldname="pvpunitarioiva" />
        </column>
        <column name="total" display="right" order="190">
            <widget type="money" fieldname="pvptotaliva" readonly="true" />
        </column>
    </columns>
</view>
